<UserControl x:Class="SudokuSolver.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SudokuSolver"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid x:Name="grid" Background="White" Width="50" Height="50">
        <Border BorderBrush="Black" BorderThickness="0.5">
            <Label x:Name="lbl" Content="9" FontSize="35" Margin="2,0,2,0" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" MouseDown="lbl_MouseDown" />
        </Border>
    </Grid>
</UserControl>
